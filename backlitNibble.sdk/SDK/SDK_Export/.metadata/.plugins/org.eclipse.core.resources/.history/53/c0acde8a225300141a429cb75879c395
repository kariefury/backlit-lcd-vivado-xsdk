	// Write rs = 0 rw = 0 db5 = 1 db4 = 1
	u32 data =outBits(screen);
	BACKLITLCD_mWriteReg( XPAR_BACKLITLCD_0_S_AXI_BASEADDR, 0, data);
	// Wait > 4.1ms

	// Write rs = 0 rw = 0 db5 = 1 db4 = 1

	// Wait > 100us

